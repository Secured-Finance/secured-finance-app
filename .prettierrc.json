{
  "tabWidth": 4,
  "singleQuote": true,
  "jsxSingleQuote": true,
  "arrowParens": "avoid",
  "parser": "typescript",
  "overrides": [
    {
      "files": "*.scss",
      "options": {
        "parser": "scss"
      }
    },
    {
      "files": ["*.json", "*.jsonc", "*.json5"],
      "options": {
        "parser": "json",
        "singleQuote": false,
        "tabWidth": 2
      }
    }
  ]
}
